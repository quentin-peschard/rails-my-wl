<div class="content">
  <h1>My movies</h1>
  <div class="list-view">
    <div class="list-left">
      <% @movies.each do |movie| %>
        <div class="card-trip">
          <img src="<%= movie.poster_url %>" />
          <div class="card-trip-infos">
            <h2><%= movie.title %></h2>
            <div class="hidden-info d-none">
              <p><%= movie.overview %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="list-right">
      <h5><em>Add a movie to the list</em></h5>
      <br>
      <%= simple_form_for @movie do |f| %>
        <%= f.input :title, placeholder: "So Long, my Son" %>
        <%= f.input :overview, placeholder: "The changes in Chinese society from the 1980s to the present day." %>
        <%= f.input :poster_url, label: "Poster URL", placeholder: "https://my-favorite-img.jpg/" %>
        <br>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
