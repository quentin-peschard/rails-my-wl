<div class="content">
  <h1><%= @list.name %></h1>
  <div class="list-view">
    <div class="list-left">
      <% @bookmarks.each do |bookmark| %>
        <div class="card-bookmark">
          <div class="card-delete">
            <%= link_to '‚úï', list_bookmark_path(bookmark), method: :delete %>
          </div>
          <img src="<%= bookmark.movie.poster_url %>" />
          <div class="card-bookmark-infos">
            <div class="first-row">
              <p style= "max-width: 65%;"><%= bookmark.movie.title %></p>
              <p><small><em><%= bookmark.rating %></em></small> ‚≠êÔ∏è</p>
            </div>
            <div class="second-row">
              <p>üí≠ <small><em>"<%= bookmark.comment %>"</em></small></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="list-right">
      <h5><em>Create your own bookmarks</em></h5>
      <br>
      <%= simple_form_for [@list, @movie, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating %>
        <%= f.association :movie %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
